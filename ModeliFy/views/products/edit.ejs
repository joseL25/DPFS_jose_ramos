<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs',{style:"edit"}) %>

<body>

    <%- include('../partials/nav-bar.ejs') %>

    <div class="content">
        <h2 class="text" data-text="EDITANDO <%= modelEdit.name %>">EDITANDO <%= modelEdit.name %></h2>
    </div>
    <main class="main">
        <div class="cubo">
            <img src="/images/cubo.png" alt="cubo">
        </div>

        <form class="form-dat" action="/products/edit/<%= modelEdit.id %>?_method=PUT" method="post" enctype="multipart/form-data">
            <div class="input-inf">
                <div class="content-label">
                    <label for="name">Nombre</label>
                </div>
                <div class="input-content">
                    <input type="text" name="name" placeholder="<%= modelEdit.name %>" id="name" required><br>
                </div>
            </div>
            <div class="input-inf">
                <div class="content-label">
                    <label for="description">Descripcion</label>
                </div>
                <div class="input-content">
                    <textarea name="description" id="description" placeholder="de que trata el modelo?"><%= modelEdit.description %></textarea><br>
                </div>
            </div>
            
            <div class="input-inf">
                <div class="content-label">
                    <label for="price">Precio</label>
                </div>
                <div class="input-content">
                    <input type="number" name="price" id="price" placeholder="<%= modelEdit.price %>">
                </div>
            </div>

            <div class="input-inf">
                <div class="content-label">
                    <label for="category">categoria</label>
                </div>
                <div class="input-content">
                    <select name="category" id="category">
                        <option selected disabled>tipo de modelo</option>
                        <option value="esculpido">esculpido</option>
                        <option value="solido">solido</option>
                        <option value="superficie">superficie</option>
                        <option value="procedimental">procedimental</option>
                    </select>
                </div>
            </div>

            <div class="input-inf">
                <div class="content-label">
                    <label for="category">archivo</label>
                </div>
                <div class="input-content">
                    <select name="category" id="category">
                        <option selected disabled>tipo de archivo</option>
                        <option value="OBJ">OBJ</option>
                        <option value="FBX">FBX</option>
                        <option value="STL">STL</option>
                        <option value="IGES">IGES</option>
                        <option value="AMF">AMF</option>
                    </select>
                </div>
            </div>
            
            <div class="input-inf">               
                <div class="content-label">
                    <label for="imagen">imagen</label>
                </div>
                <div class="input-content image">
                    <input type="file" name="imagen" id="imagen" accept="imagen/*">
                </div>                
            </div>

            <div class="send">
                <button type="submit">EDITAR</button>
            </div>
        </form>
    </main>

    <%- include('../partials/footer.ejs') %>
</body>

</html>