<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs',{style:"create"}) %>

<body>

    <%- include('../partials/nav-bar.ejs') %>

    <div class="content">
        <h2 class="text" data-text="NUEVO MODELO 3D">NUEVO MODELO 3D</h2>
    </div>
    <main class="main">
        <div class="cubo">
            <img src="../images/cubo.png" alt="cubo">
        </div>

        <form class="form-dat" action="/products/create" method="post" enctype="multipart/form-data" id="formulario" novalidate>
            <div class="input-inf">
                <div class="content-label">
                    <label for="name">Nombre</label>
                </div>
                <div class="input-content">
                    <input type="text" name="name" placeholder="modelo 3d" id="name" required>
                    <div class="error"></div>
                </div>
            </div>
            <div class="input-inf">
                <div class="content-label">
                    <label for="description">Descripcion</label>
                </div>
                <div class="input-content">
                    <textarea name="description" id="description" placeholder="de que trata el modelo?"></textarea><br>
                </div>
            </div>
            
            <div class="input-inf">
                <div class="content-label">
                    <label for="price">Precio</label>
                </div>
                <div class="input-content">
                    <input type="number" name="price" id="price" placeholder="'0' si el modelo sera gratuito">
                </div>
            </div>

            <div class="input-inf">
                <div class="content-label">
                    <label for="category">categoria</label>
                </div>
                <div class="input-content">
                    <select name="category" id="category">
                        <option selected disabled>tipo de modelo</option>
                        <% categories.forEach(category => { %>
                            <option value="<%= category.id %>"><%= category.name %></option>
                        <% }) %>
                    </select>
                </div>
            </div>

            <div class="input-inf">
                <div class="content-label">
                    <label for="file">archivo</label>
                </div>
                <div class="input-content">
                    <select name="file" id="file">
                        <option selected disabled>tipo de archivo</option>
                        <% files.forEach(file => { %>
                            <option value="<%= file.id %>"><%= file.name %></option>
                        <% }) %>
                    </select>
                </div>
            </div>
            
            <div class="input-inf">               
                <div class="content-label">
                    <label for="imagen">imagen</label>
                </div>
                <div class="input-content image">
                    <input type="file" name="imagen" id="imagen">
                </div>                
            </div>

            <div class="send">
                <button type="submit">SUBIR MODELO</button>
            </div>
        </form>
    </main>

    <%- include('../partials/footer.ejs') %>
    <script src="/js/create.js"></script>
</body>

</html>